{{define "title"}}home{{ end }}

{{define "page-content"}}
<h2>Ryan Nicoletti</h2>
<p class="intro">
  Hello! I'm Ryan. This is my little corner of the web where I write about
  things I find interesting or what I'm working on.
</p>

<h3>Posts</h3>
<ul>
  {{
    range.Posts
  }}
  <li>
    <article>
      <a href="/post/{{.Slug}}">{{.Title}}</a>
      <time datetime="{{.Created.Format `2006-01-02`}}">
        ({{.Created.Format "January 2, 2006"}})
      </time>
    </article>
  </li>
  {{
    end
  }}
</ul>
{{ end }}

{{define "styles"}}
<!-- Default empty styles block -->
{{ end }}

{{define "base"}}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{template "title" .}} - byRyan</title>

    <link rel="stylesheet" href="/static/css/base.css" />

    {{if .Post}}
    {{if .Post.Slug}}
    <link rel="stylesheet" href="/static/css/posts/{{.Post.Slug}}.css" />
    <link rel="stylesheet" href="/static/css/pages/post.css" />
    <!-- prettier-ignore -->
    {{end}}
    <!-- prettier-ignore -->
    {{end}}

    <link rel="stylesheet" href="/static/css/pages/{{template "title" .


    }}.css" />

    <link rel="icon" type="image/x-icon" href="/static/images/favicon.ico" />
  </head>
  <body>
    <div class="base-wrapper">
      <header>
        {{template "nav" .}}
      </header>
      <main class="base-main">
        <div>{{template "main" .}}</div>
      </main>
      <footer class="base-footer">
        &copy; {{.CurrentYear}} Ryan Nicoletti
      </footer>
    </div>
    <script src="/static/js/main.js" type="text/javascript"></script>
  </body>
</html>
{{ end }}
